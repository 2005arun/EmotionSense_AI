# EmotionSense Environment Variables
# Copy this file to .env and customize as needed

# ==========================================
# Model Settings
# ==========================================
FACE_MODEL=deepface
VOICE_MODEL=transformer
TEXT_MODEL=auto
MUSIC_MODEL=facebook/musicgen-small

# Set to true to disable MusicGen and use procedural fallback
# Useful for systems with limited RAM or no internet
DISABLE_MUSICGEN=false

# ==========================================
# GPU Settings
# ==========================================
USE_GPU=false

# ==========================================
# Server Settings
# ==========================================
# Flask API host and port
API_HOST=0.0.0.0
API_PORT=5000

# Request timeout in seconds (music generation can take time)
REQUEST_TIMEOUT=300

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=

# ==========================================
# Fusion Settings
# ==========================================
FUSION_METHOD=confidence_based
FACE_WEIGHT=0.4
VOICE_WEIGHT=0.35
TEXT_WEIGHT=0.25

# ==========================================
# Music Settings
# ==========================================
DEFAULT_DURATION=10
MAX_DURATION=20

# ==========================================
# React Frontend (optional)
# ==========================================
# If running React on different port/host
REACT_APP_API_URL=http://localhost:5000/api

# ==========================================
# UI Settings (Streamlit)
# ==========================================
THEME=light
SHOW_CONFIDENCE=true
ENABLE_HISTORY=true
